---
layout: main.njk
pageId: post-content
metadata:
  twitterShare: https://twitter.com/share?
  image: https://tannerdolby.com/images/headshot3.png
  image_alt: Headshot of Tanner
  url: https://tannerdolby.com
  twitter: tannerdolby
  twitter_card_type: summary_large_image
  name: Tanner Dolby
  generator: eleventy
  comments: true
---

<div class="main-content">
    <header class="post-header">
        <div class="post-wrap">
            <h1 class="h1" id="post-title">{{ title }}</h1>
            <p class="date">Posted on&nbsp;<time style="margin-bottom: 0;" datetime="{{ datetime | date('YYYY-MM-DD') }}">
            {{ datetime | date('MMMM DD, YYYY') }}</time>&nbsp;&bull; tagged with&nbsp;
            {% for tag in tags %}
            <a class="post-tag" href="/writing?filter={{ tag }}" aria-label="Link to {{ tag }} posts">
                {{ tag }}
            </a>
            {% endfor %}
            </p>
        </div>
    </header>
    <div id="post">
        {{ content | safe }}
    </div>
    {% set currentPost = collections.posts | getCollectionItem(page) %}
    {% toc post=currentPost %}
    {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.posts | getNextCollectionItem(page) %}
    <nav class="prev-next">
        {% if previousPost %}
            <a href="{{ previousPost.url }}">
                <h3>Previous Post</h3>
                <span>{{ previousPost.data.title }}</span>
            </a>
        {% endif %}
        {% if nextPost %}
            <a class="next-post" href="{{ nextPost.url }}">
                <h3>Next Post</h3>
                <span>{{ nextPost.data.title }}</span>
            </a>
        {% endif %}
    </nav>
    {% include "share.njk" %}
    {% include "related-posts.njk" %}
</div>